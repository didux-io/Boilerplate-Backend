{
	"name": "boilerplate-backend",
	"version": "1.0.0",
	"description": "Boilerplate Backend",
	"main": "./build/src/main/index.js",
	"scripts": {
		"prebuild": "node prebuild.js",
		"start": "nodemon ./build/main/index.js",
		"build": "tsc -p .",
		"watch": "tsc -w",
		"lint": "eslint . --ext .ts",
		"lint:json": "eslint . --ext .ts -f json -o coverage/eslint.json",
		"lint:fix": "eslint . --fix --ext .ts",
		"clean": "rm -rf build coverage",
		"view:coverage": "serve coverage/lcov-report",
		"sonar": "sonar-scanner",
		"test": "cross-env NODE_ENV=test jest --coverage --silent --testTimeout=10000 && npm run lint:json",
		"test:one-file": "cross-env NODE_ENV=test jest --coverage --testTimeout=10000 -- server"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/didux-io/Boilerplate-Backend.git"
	},
	"bugs": {
		"url": "https://github.com/didux-io/Boilerplate-Backend/issues"
	},
	"homepage": "https://www.didux.io",
	"author": "Didux.io",
	"license": "GPL-3.0-only",
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"clearMocks": true,
		"testResultsProcessor": "jest-sonar-reporter",
		"roots": [
			"src"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover"
		]
	},
	"jestSonar": {
		"reportPath": "coverage",
		"reportFile": "jest-report.xml",
		"indent": 4
	},
	"dependencies": {
		"@proofmeid/webrtc-node": "0.0.153",
		"@types/bcrypt": "^3.0.0",
		"@types/bluebird": "^3.5.27",
		"@types/cors": "^2.8.4",
		"@types/express": "^4.16.0",
		"@types/express-http-proxy": "^1.5.10",
		"@types/jsonwebtoken": "^8.3.2",
		"@types/jwt-decode": "^2.2.1",
		"@types/nedb": "^1.8.7",
		"@types/node": "14.14.6",
		"@types/pug": "^2.0.4",
		"@types/validator": "13.1.0",
		"base64url": "^3.0.1",
		"bcrypt": "5.0.0",
		"body-parser": "^1.19.0",
		"cors": "^2.8.4",
		"cron": "^1.8.2",
		"crypto-random-string": "^3.3.0",
		"express": "^4.16.3",
		"express-http-proxy": "^1.5.1",
		"fs": "0.0.1-security",
		"gmail-send": "^1.8.10",
		"httpheaderprovider": "^0.3.4",
		"jsonwebtoken": "^8.5.1",
		"jwt-decode": "3.0.0",
		"nedb": "^1.8.0",
		"node-fetch": "^2.6.1",
		"nodemon": "2.0.6",
		"pg": "8.4.2",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^5.8.10",
		"sequelize-cli": "^5.5.0",
		"sequelize-typescript": "^1.0.0-beta.3",
		"solc": "0.7.4",
		"swagger-jsdoc": "5.0.0",
		"swagger-ui-express": "^4.1.4",
		"swig": "^1.4.2",
		"typescript": "3.9.7",
		"web3": "1.2.5",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"@types/supertest": "^2.0.10",
		"@types/swagger-jsdoc": "3.0.2",
		"@types/swagger-ui-express": "4.1.2",
		"@types/ws": "^7.2.4",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.13.0",
		"eslint-plugin-no-loops": "^0.3.0",
		"jest": "^26.6.3",
		"jest-preset-angular": "^8.3.2",
		"jest-sonar-reporter": "^2.0.0",
		"mocha": "^8.2.1",
		"serve": "^11.3.2",
		"sonar-scanner": "^3.1.0",
		"supertest": "^6.0.1",
		"ts-jest": "^26.4.4"
	}
}
